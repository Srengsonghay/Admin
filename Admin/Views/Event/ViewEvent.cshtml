@{
    Layout = "_Layout";
}
<!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs d-flex align-items-center" style="background-image: url('@Url.Content("~/source/img/cards-3.jpg")');">
      <div class="container position-relative d-flex flex-column align-items-center">

        <h2>Event</h2>
        @*<ol>
          <li><a href="index.html">Home</a></li>
          <li>Blog</li>
        </ol>*@

      </div>
    </div><!-- End Breadcrumbs -->
    <!-- ======= Blog Section ======= -->
    <section id="blog" class="blog">
      <div class="container" data-aos="fade-up">

        <div class="row g-5">

          <div class="col-lg-8" data-aos="fade-up" data-aos-delay="200">
            <div class="row gy-5 posts-list">
                @foreach(var events in Model.Post){
                      <div class="col-lg-6">
                        <article class="d-flex flex-column">

                          <div class="post-img">
                              @{
                                    var base64 = Convert.ToBase64String(events.event_image);
                                    var img = string.Format("data:image/gif;base64,{0}", base64);
                                }
                            <img src="@img" alt="" class="img-fluid">
                          </div>

                          <h2 class="title">
                              
                                  <a asp-area=""  asp-controller="Event" asp-action="ViewEventDetail" asp-route-id="@events.id" asp-route-Title="@SlugGenerator.SlugGenerator.GenerateSlug(events.event_heading)"> @events.event_heading</a>  
                             
                             @*@Html.ActionLink(@events.event_heading, "ViewEventDetail", "Event", new {id =@events.id, title= @SlugGenerator.SlugGenerator.GenerateSlug(events.event_heading)}, null)*@
                              @*<a href="ViewEventDetail/@SlugGenerator.SlugGenerator.GenerateSlug(events.event_heading)">@events.event_heading</a>*@
                             
                          </h2>

                          @*@SlugGenerator.SlugGenerator.GenerateSlug(events.event_heading)-*@

                          <div class="meta-top">
                            <ul>
                             
                              <li class="d-flex align-items-center"><i class="bi bi-clock"></i> <a asp-area=""  asp-controller="Event" asp-action="ViewEventDetail" asp-route-id="@events.id" asp-route-Title="@SlugGenerator.SlugGenerator.GenerateSlug(events.event_heading)">@events.event_date.Value.ToString("MMM-dd-yyyy")</a></li>
                              
                            </ul>
                          </div>

                          <div class="content overflow-hidden"  style="height:93px; ">
                            <p>
                              @Html.Raw(events.event_detail)
                            </p>
                          </div>

                          <div class="read-more mt-auto align-self-end">
                            <a asp-area=""  asp-controller="Event" asp-action="ViewEventDetail" asp-route-id="@events.id" asp-route-Title="@SlugGenerator.SlugGenerator.GenerateSlug(events.event_heading)">Read More <i class="bi bi-arrow-right"></i></a>
                          </div>

                        </article>
                      </div><!-- End post list item -->
              }
              </div><!-- End blog posts list -->
              

                  

            @*<div class="blog-pagination">
              <ul class="justify-content-center">
                <li><a href="#">1</a></li>
                <li class="active"><a href="#">2</a></li>
                <li><a href="#">3</a></li>
              </ul>
            </div><!-- End blog pagination -->*@
            </div>
          

          <div class="col-lg-4" data-aos="fade-up" data-aos-delay="400">

            <div class="sidebar ps-lg-4">

              @*<div class="sidebar-item search-form">
                <h3 class="sidebar-title">Search</h3>
                <form action="" class="mt-3">
                  <input type="text">
                  <button type="submit"><i class="bi bi-search"></i></button>
                </form>
              </div><!-- End sidebar search formn-->

              <div class="sidebar-item categories">
                <h3 class="sidebar-title">Categories</h3>
                <ul class="mt-3">
                  <li><a href="#">General <span>(25)</span></a></li>
                  <li><a href="#">Lifestyle <span>(12)</span></a></li>
                  <li><a href="#">Travel <span>(5)</span></a></li>
                  <li><a href="#">Design <span>(22)</span></a></li>
                  <li><a href="#">Creative <span>(8)</span></a></li>
                  <li><a href="#">Educaion <span>(14)</span></a></li>
                </ul>
              </div><!-- End sidebar categories-->*@

              <div class="sidebar-item recent-posts">
                <h3 class="sidebar-title">Recent Posts</h3>

                <div class="mt-3">
                    
                                @foreach(var events in Model.LastPost.Take(4)){
                                
                                    <div class="post-item mt-3">
                                        @{
                                            var base64 = Convert.ToBase64String(events.event_image);
                                            var img = string.Format("data:image/gif;base64,{0}", base64);
                                        }
                                        <img src="@img" alt="" class="flex-shrink-0">
                                        <div>
                                            <h4><a asp-area=""  asp-controller="Event" asp-action="ViewEventDetail" asp-route-id="@events.id" asp-route-Title="@SlugGenerator.SlugGenerator.GenerateSlug(events.event_heading)"> @events.event_heading</a></h4>
                                            <time datetime="2020-01-01">@events.event_date.Value.ToString("MMM-dd-yyyy")</time>
                                        </div>
                                    </div><!-- End recent post item-->
                                }
                    
                </div>

              </div><!-- End sidebar recent posts-->

              <div class="sidebar-item tags">
                <h3 class="sidebar-title">Tags</h3>
                <ul class="mt-3">
                  <li><a href="#">App</a></li>
                  <li><a href="#">IT</a></li>
                  <li><a href="#">Business</a></li>
                  <li><a href="#">Mac</a></li>
                  <li><a href="#">Design</a></li>
