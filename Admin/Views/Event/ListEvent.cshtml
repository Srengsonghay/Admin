@model List<Admin.Models.Events>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_LayoutDash";

}
<div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">
          <a asp-area="" asp-controller="Event" asp-action="CreateEvent"><i class="mdi mdi-chevron-left"></i></a>
           List of Events</h4>
                   
                    <table class="table table-striped">
                      <thead>
                        <tr>
                         @* <th> ID </th>
                          <th> Logo </th>*@
                          <th> Image</th>
                          <th> Heading </th>
                          @*<th> Detail </th>*@
                          <th> Date</th>
                          <th>  </th>
                        </tr>
                      </thead>
                      <tbody>
                          @foreach(var events in Model){
                          <tr>             
                         @* <td> @Partner.id </td>*@
                          <td> 
                               @{
                                    var base64 = Convert.ToBase64String(events.event_image);
                                    var img = string.Format("data:image/gif;base64,{0}", base64);
                                }
                              <img src="@img" style="width:60px; height:60px"> 
                          </td>
                          <td> @events.event_heading </td>
                         @* <td> @Html.Raw(@events.event_detail) </td>*@
                          <td> @events.event_date.Value.ToString("MMM-dd-yyyy")</td> 
                          <td> <a href="UpdateEvent\@events.id"><button type="button" class="btn btn-inverse-info btn-sm">Edit</button></a></td>
                          </tr>
                          }
                      </tbody>
                    </table>
                    
                  </div>
                </div>
              </div>
