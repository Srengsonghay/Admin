@model List<Admin.Models.AboutUs>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_LayoutDash";

}

<div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">
          <a asp-area="" asp-controller="AboutUS" asp-action="CreateAboutUS"><i class="mdi mdi-chevron-left"></i></a>
           About US Contents</h4>
                   
                    <table class="table table-striped">
                      <thead>
                        <tr>
                         @* <th> ID </th>
                          <th> Logo </th>*@
                          <th> Heading </th>
                          <th>@* Description*@ </th>
                          @*<th> Status</th>*@
                          <th>  </th>
                        </tr>
                      </thead>
                      <tbody>
                          @foreach(var about in Model){
                          <tr>             
                         @* <td> @about.id </td>*@
                          <td> @about.about_heading </td>
                          
                          <td> @*@Html.Raw(@about.about_detail.Substring(0,about.about_detail.Length > 70 ? 70 : about.about_detail.Length))*@</td>
                          @*<td> @about.status</td>*@
                          <td> <a href="UpdateAboutUS\@about.id"><button type="button" class="btn btn-inverse-info btn-sm">Edit</button></a></td>
                          </tr>
                          }
                      </tbody>
                    </table>
                    
                  </div>
                </div>
              </div>
