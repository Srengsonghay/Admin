@model List<Admin.ViewModel.NavigationMenuViewModel>
@{
	Layout = "_LayoutDash";
	var item = Model.Max(i => i.DisplayOrder);
}
<partial name="_AdminPartial" />
<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
         <div class="card-body">
				<div class="row p-0">
                        <div class="col-6">
                            <h1 class="card-title">Action Permission </h1>
                        </div>  
                        <div class="col-6 text-end" >
							<a class="btn btn-gradient-primary btn-md" asp-action="CreateActionPermission" asp-controller="Admin"><strong>+</strong> Add</a>
                        </div>
                 </div>
<hr />
<div class="row">
	
				<table class="table table-striped mb-3">
					<thead>
						<tr>
							<th>
								Permission Name
							</th>
							<th>
								Controller Name 
							</th>
							<th>
								Action Name 
							</th>
							<th>
								<div class="btn-group">
								  <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
									Display Order
								  </button>
								  <ul class="dropdown-menu">
										@for(var i=1 ; i <= item; i++){
												<li style="text-align: center;"><a class="dropdown-item" asp-action="ActionPermission" asp-controller="Admin" asp-route-order="@i">@i</a></li>
										}
								  </ul>
								</div>
							</th>
							<th>
								Action
							</th>
						</tr>
					</thead>
					<tbody>
						@for (var i = 0; i < Model.Count; i++)
						{
							<tr>
								<td>
									@Model[i].Name
								</td>
								<td>
									@Model[i].ControllerName
								</td>
								<td>
									@Model[i].ActionName
								</td>
								<td>
									@Model[i].DisplayOrder
								</td>
								<td>
									<a asp-action="EditActionPermission" asp-controller="Admin" asp-route-id="@Model[i].Id" class="btn btn-gradient-info btn-sm">Edit</a>
								</td>
							</tr>
						}
					</tbody>
					
					
				</table>
				
			
			<div class="form-group">
				
				<a asp-action="Roles" class="btn btn-secondary">Back to List</a>
			</div>
		
	
</div>
</div>
</div>