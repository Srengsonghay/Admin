<div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">
          <a asp-area="" asp-controller="Partner" asp-action="CreatePartner"><i class="mdi mdi-chevron-left"></i></a>
           Partner Contents</h4>
                   
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          @*<th> ID </th>*@
                          <th> Logo </th>
                          <th> Partner Name </th>
                          <th> Category </th>
                          <th> Status</th>
                          <th>  </th>
                        </tr>
                      </thead>
                      <tbody>
                          @foreach(var Partner in Model){
                        <tr>             
                            @*<td> @Partner.id </td>*@
                            <td> 
                                @{
                                    var base64 = Convert.ToBase64String(Partner.partner_logo);
                                    var img = string.Format("data:image/gif;base64,{0}", base64);
                                }
                              <img src="@img" style="width:60px; height:60px"> 
                            </td>
                          <td> @Partner.partner_name </td>
                          <td> @Partner.category_partner.category_name</td>
                          <td> @Partner.status</td>
                          <td> <a href="UpdatePartner\@Partner.id"><button type="button" class="btn btn-inverse-info btn-sm">Edit</button></a></td>
                          </tr>
                          }
                      </tbody>
                    </table>
                    
                  </div>
                </div>
              </div>


