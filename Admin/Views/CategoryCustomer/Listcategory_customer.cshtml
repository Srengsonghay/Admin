<div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">
        
           List Customer Category <span style="Float: right;"><a asp-area="" asp-controller="CategoryCustomer" asp-action="CreateCategoryCustomer">      
           <button type="button" class="btn btn-inverse-primary btn-md" >Create</button></a></span></h4>
            
            
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          @*<th> ID </th>*@
                          <th> Customers Category </th>
                          <th> Status</th>
                          <th>  </th>
                        </tr>
                      </thead>
                      <tbody>
                          @foreach(var category_customer in Model){
                          <tr>             
                          @*<td> @category_partner.id </td>*@
                          <td> @category_customer.category_name </td>
                          <td> 
                              @{
                                    if(category_customer.status == true)
                                    {
                                        <h5 class="card-title text-success">Active</h5>
                                    }
                                    else
                                    {
                                         <h5 class="card-title text-danger">None</h5>
                                    }
                              }
                          </td>
                          <td> <a href="Updatecategory_customer\@category_customer.id"><button type="button" class="btn btn-inverse-info btn-sm">Edit</button></a></td>
                          </tr>
                          }
                      </tbody>
                    </table>
                    
                  </div>
                </div>
              </div>
